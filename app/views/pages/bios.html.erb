<div class="flex-grow animated fadeIn">
  <div class="px-8 mx-auto mb-12 max-w-7xl">

    <div class="transition duration-500 ease-in-out transform mb-14 hover:-translate-x-1"><%= link_to '← Retour', root_path, class:"text-asfe-blue-light" %></div>

    <% Candidat.all.sort_by(&:position).each do |candidat| %>
      <div class="mb-16">
        <div class="mx-auto md:flex max-w-7xl">
          <%= image_tag candidat.photo, class:'flex-none object-cover rounded-full hidden md:block w-28 h-28 mr-6' %>
          <div>
            <div class="flex items-center mb-6">
              <%= image_tag candidat.photo, class:'flex-none object-cover rounded-full md:hidden w-14 h-14 md:h-28 mr-3' %>
              <h3 class="text-4xl font-bold text-gray-100"><%= candidat.prenom + ' ' + candidat.nom %></h3>
            </div>
            <p class="pb-8 text-xl font-medium leading-relaxed text-gray-100">
              <%= candidat.bio_summary %>
            </p>
          </div>
        </div>
        <div class="mx-auto text-lg font-light text-gray-200 max-w-7xl">
         <%= candidat.bio %>
        </div>
      </div>
    <% end %>

    <div class="mt-24 transition duration-500 ease-in-out transform hover:-translate-x-1"><%= link_to '← Retour', root_path, class:"text-asfe-blue-light" %></div>
  </div>
</div>
